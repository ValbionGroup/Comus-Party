{% extends 'layouts/authentification.twig' %}

{% block title %}
    Connexion
{% endblock %}

{% block content %}
    <div class="w-full">
        <div class="mt-4 sm:mt-0">
            <h1 class="text-3xl font-bold">Connexion</h1>
            <p>Pour continuer veuillez vous connecter</p>
        </div>
        <form action="" method="post" class="mt-8 space-y-6">
            <div>
                <label for="email" class="block">Adresse email</label>
                <input type="email" name="email" id="email" class="w-full input" required>
            </div>
            <div>
                <label for="password" class="block">Mot de passe</label>
                <input type="password" name="password" id="password" class="w-full input" required>
            </div>

            <div>
                <button type="submit" class="w-full btn-primary">Se connecter</button>
            </div>
        </form>
        <div class="flex justify-center mt-5">
            <a href="/register"
               class="text-center justify dark:text-night-3 hover:underline transition-all ease-in-out">Vous n'avez pas
                encore de compte ? <span class="font-semibold">Inscrivez-vous d√®s maintenant</span></a>
        </div>
    </div>
{% endblock %}