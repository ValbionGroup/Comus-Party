{%  extends "/layouts/default.twig" %}
{% block title %}Accueil{% endblock %}
{% block content %}
    <div class="overflow-y-auto scrollbar-thumb-night-base scrollbar-track-night-base h-full w-full">
        <div class="flex flex-col sm:flex-row justify-between mb-10">
            <h1 class="text-4xl ml-5 mt-5 font-serif">Jeux</h1>
            <div class="relative justify-self-end  mt-5 ml-5 sm:mr-5">
                <!-- Search Button/Bar Container -->
                <input
                        id="searchBar"
                        type="search"
                        placeholder="Rechercher..."
                        class="w-10 h-10 pl-10 pr-0.5 transition-all duration-300 ease-in-out bg-lavender-blush dark:bg-night-base border border-lavender-blush dark:border-night rounded-full shadow-sm hover:w-64 focus:w-64 hover:pl-12 focus:pl-12 focus:outline-none"
                />
                <!-- Search Icon -->
                <span class="absolute top-2.5 left-3 text-gray-400 pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
              </svg>
            </span>
            </div>
        </div>


        <div class="container mx-auto grid auto-cols-auto gap-y-10 place-items-center sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-4 mb-20 transition-all duration-500 ease-in-out">
            {% for game in games %}
                <div class="bg-lavender-blush-1 dark:bg-night-1 w-56 max-h-screen rounded-xl game opacity-0 translate-y-10 animate-fade-in">
                    <div class="m-3">
                        <img class="w-full h-52 object-cover rounded-xl" src="/assets{{ game.pathImg }}" alt="not">
                    </div>
                    <p class="text-xl ml-5 mb-4x"><b>{{ game.name }}</b></p>
                    <div class="h-12 text-white justify-around flex">
                        <button class="w-20 h-10 bg-blue-violet hover:bg-night-1 dark:hover:bg-lavender-blush-base dark:hover:text-night-1 text-lavender-blush-base rounded-lg flex items-center justify-center relative transition-all duration-300 group hover:scale-110">
                      <span class="absolute opacity-100 scale-100 group-hover:opacity-0 group-hover:scale-75 transition-all duration-200 ease-out">
                        <svg xmlns="http://www.w3.org/2000/svg" width="1.2em" height="1.2em" viewBox="0 0 20 20">
                          <path fill="currentColor" d="m17.545 15.467l-3.779-3.779a6.15 6.15 0 0 0 .898-3.21c0-3.417-2.961-6.377-6.378-6.377A6.185 6.185 0 0 0 2.1 8.287c0 3.416 2.961 6.377 6.377 6.377a6.15 6.15 0 0 0 3.115-.844l3.799 3.801a.953.953 0 0 0 1.346 0l.943-.943c.371-.371.236-.84-.135-1.211M4.004 8.287a4.28 4.28 0 0 1 4.282-4.283c-2.366 0 4.474 2.107 4.474 4.474a4.284 4.284 0 0 1-4.283 4.283c-2.366-.001-4.473-2.109-4.473-4.474"/>
                        </svg>
                      </span>
                            <span class="absolute opacity-0 scale-75 group-hover:opacity-100 group-hover:scale-100 transition-all duration-200 ease-out">
                        Trouver
                    </span>
                        </button>
                        <button class="w-20 h-10 bg-blue-violet hover:bg-night-1 dark:hover:bg-lavender-blush-base dark:hover:text-night-1 text-lavender-blush-base rounded-lg flex items-center justify-center relative transition-all duration-300 group hover:scale-110">
                  <span class="absolute opacity-100 scale-100 group-hover:opacity-0 group-hover:scale-75 transition-all duration-300 ease-out">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1.2em" height="1.2em" viewBox="0 0 24 24">
                      <g fill="none">
                        <path fill="currentColor" d="M10.5 20a1.5 1.5 0 0 0 3 0v-6.5H20a1.5 1.5 0 0 0 0-3h-6.5V4a1.5 1.5 0 0 0-3 0v6.5H4a1.5 1.5 0 0 0 0 3h6.5z"/>
                      </g>
                    </svg>
                  </span>
                            <span class="absolute opacity-0 scale-75 group-hover:opacity-100 group-hover:scale-100 transition-all duration-300 ease-out">
                        Cr√©er
                    </span>
                        </button>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}

{% block scripts %}
    <script src="/assets/js/home.js"></script>
{% endblock %}