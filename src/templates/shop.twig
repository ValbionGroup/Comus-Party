{%  extends "/layouts/default.twig" %}
{% block title %}Boutique{% endblock %}
{% block content %}




    <div>
        <h1 class="text-3xl text-night mt-10 ml-6 mb-4">Boutique</h1>

    </div>


    <div class="flex w-full h-2/3 flex flex-wrap">
        {# Boutique des avatars #}
        <div class="bg-lavender-blush w-1/3 h-full rounded-3xl m-10 p-6 overflow-y-auto">
            <h2 class="text-2xl text-night mb-4 font-serif">Avatars</h2>

            <div class="flex flex-wrap">
                {% for pfp in pfps %}

                    <div class="w-20 h-20 m-1 pfp cursor-pointer" onclick="showModale({ name : '{{ pfp.name }}', description : '{{ pfp.description }}', pricePoint : '{{ pfp.pricePoint }}', priceEuro : '{{ pfp.priceEuro }}', pathImg : '../../{{ pfp.pathImg }}{{ pfp.name }}.png'})">
                        <img src="../../{{ pfp.pathImg }}{{ pfp.name }}.png" alt="Pas d'image" class="rounded-3xl">
                    </div>

                {% endfor %}
            </div>

        </div>

{# Boutique des bannières #}


        <div class="bg-lavender-blush w-1/2 h-full rounded-3xl m-10 p-6 overflow-y-auto">
            <h2 class="text-2xl text-night mb-4 font-serif">Bannières</h2>
            <div class="flex flex-wrap">
                {% for banner in banners%}
                <div class="w-full h-20 m-1 cursor-pointer"  onclick="showModale({ name : '{{ banner.name }}', description : '{{ banner.description }}', pricePoint : '{{ banner.pricePoint }}', priceEuro : '{{ banner.priceEuro }}', pathImg : '../../{{ banner.pathImg }}{{ banner.name }}.png'})">
                    <img src="../../{{ banner.pathImg }}{{ banner.name }}.png" alt="" class="w-full h-full rounded-2xl" >
                </div>

                {% endfor %}
            </div>

        </div>

    </div>

    <div id="modale" class=" justify-center items-center text-center flex-col bg-lavender-blush w-1/2 p-6  rounded-3xl absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 hidden ">

        <img src="" alt="" class="w-full rounded-3xl text-center">
        <h2 class="text-center">Nom</h2>
        <p class="text-center">Description</p>

        <div class="flex justify-center ">
            <p>PriceComus</p>

            <p>PriceEuro</p>
        </div>
        <div>
        <button class="bg-hot-magenta text-white font-semibold py-3 px-6 rounded-lg shadow-md transform transition-all duration-300 ease-in-out hover:bg-night hover:scale-105 hover:shadow-lg focus:outline-none">Ajouter au panier</button>
        <button class="bg-hot-magenta text-white font-semibold py-3 px-6 rounded-lg shadow-md transform transition-all duration-300 ease-in-out hover:bg-night hover:scale-105 hover:shadow-lg focus:outline-none" id="closeModalBtn">Quitter</button>
        </div>

    </div>

    <script src="../scripts/shop.js"></script>


{% endblock %}