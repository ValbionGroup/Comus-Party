<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/assets/css/builded.css">
    <title>{% block title %}-{% endblock %} | Comus Party</title>
</head>
<body class="h-screen overflow-hidden dark:text-lavender-blush-base text-night-base animated-gradient animate-gradient">
    {% block layout %}{% endblock %}

    {% if error.code != null %}
        <div id="errorMessage"
             class="absolute bottom-6 right-6 bg-red-500 text-red-200 px-5 py-3 shadow-md rounded-2xl">
            <p class="font-semibold">Une erreur est survenue !</p>
            <span class="font-semibold">{{ error.code }}</span> : {{ error.message }}
        </div>
    {% endif %}

    <script language="JavaScript">
        const errorMessage = document.getElementById('errorMessage');
        if (errorMessage) {
            setTimeout(() => {
                errorMessage.style.transition = "transform 0.7s ease-out";
                errorMessage.style.transform = "translateX(500px)";
                errorMessage.addEventListener('transitionend', () => {
                    errorMessage.remove();
                });
            }, 5000);
        }
    </script>
    {% block scripts %}{% endblock %}
</body>
</html>